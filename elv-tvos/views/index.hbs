<?xml version="1.0" encoding="UTF-8" ?>
<document>
   <listTemplate>
      <banner>
         <title>Eluvio TV</title>
      </banner>
      <list>
         <header>
            <title>Available Options</title>
         </header>
         <section>
            <listItemLockup onselect="loadRedeemForm()">
                <decorationImage src="resource://button-more" />
                <title>Redeem Site Code</title>
                <relatedContent>
                    <lockup>
                        <img src="{{eluvio_logo}}" width="1200" height="675" />
                        <title>Redeem Site Code</title>
                        <description>If you have an access code, enter it here to load the Site.</description>
                    </lockup>
                </relatedContent>
            </listItemLockup>

            {{#each sites}}
                <listItemLockup onselect="loadSite({{@index}})">
                <decorationImage src="resource://button-preview" />
                <title>{{display_title}}</title>
                <relatedContent>
                    <lockup>
                        <img src="{{landscape_logo}}" width="1200" height="675" />
                        <title>{{display_title}}</title>
                        <description>{{info.synopsis}}</description>
                    </lockup>
                </relatedContent>
                </listItemLockup>
            {{/each}}
         </section>
      </list>
   </listTemplate>
</document>