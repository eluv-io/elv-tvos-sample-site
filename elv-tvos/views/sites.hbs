<?xml version="1.0" encoding="UTF-8" ?>
<document>
  <listTemplate>
      <background>
          <img src="{{eluvio_background}}"/>
      </background>
      <list >
         <header>
            <title>Available Sites</title>
         </header>
         <section>  
            {{#each sites}}
                <listItemLockup onselect="loadSite({{@index}})">
                <decorationImage src="resource://button-preview" />
                <title>{{siteInfo.display_title}}</title>
                <relatedContent>
                    <lockup>
                        <img src="{{landscape_logo}}" width="1200" height="675" />
                        <title>{{siteInfo.display_title}}</title>
                        <description>{{siteInfo.info.synopsis}}</description>
                    </lockup>
                </relatedContent>
                </listItemLockup>
            {{/each}}
         </section>
      </list>
  </listTemplate>
</document>